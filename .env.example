# Test Environment Configuration
# Copy this file to .env and update values for your environment

# Environment identifier (local, staging, production)
TEST_ENV=local

# Base URL for the application under test
BASE_URL=http://localhost:3000

# API Base URL (if different from BASE_URL)
API_URL=http://localhost:3000/api

# Authentication credentials (for API-based auth)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=your-test-password

# Service API Key (for service-to-service testing)
# SERVICE_API_KEY=your-service-api-key

# LLM endpoints (from architecture)
# LLM_LOCAL_ENDPOINT=http://localhost:11434
# LLM_CLOUD_ENDPOINT=https://api.openai.com/v1

# CI-specific settings
# CI=true
